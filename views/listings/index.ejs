<% layout("/layouts/boilerplate") %>
  
  <div
    class="row row-cols-xxl-4 row-cols-xl-3 row-cols-lg-3 row-cols-md-2 card-container"
  >
    <% for(listings of allListing){%>
    <a href="/listing/<%= listings._id %>">
      <div class="card" style="width: 18rem">
        <img src="<%= listings.image.url %>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%= listings.title %></h5>
          <p class="card-text"><%= listings.price %></p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"
  ></script>